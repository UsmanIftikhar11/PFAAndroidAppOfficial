                <action android:name="android.location.PROVIDERS_CHANGED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
        <service
            android:name=".notifications.MyFirebaseMessagingService"
            android:exported="true">
            <intent-filter>
